/* pages/my-activities/my-activities.wxss */
@import "/styles/design-system.wxss";

.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
}

.header-actions {
  margin-bottom: 30rpx;
}

.scan-btn {
  width: 100%;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  border-radius: 48rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
  border: none;
}

.scan-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.activities-list {
  margin-bottom: 120rpx;
}

.activity-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.activity-card:active {
  transform: translateY(-2rpx);
  border-color: #667eea;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.15);
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.activity-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-active {
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}

.status-draft {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b35 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.2);
}

.status-completed {
  background: linear-gradient(135deg, #999999 0%, #777777 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(153, 153, 153, 0.2);
}

.activity-date {
  font-size: 24rpx;
  color: #999;
}

.activity-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.items-count {
  font-size: 28rpx;
  color: #333;
}

.share-link {
  font-size: 24rpx;
  color: #999;
  word-break: break-all;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  color: #999;
}

.create-btn {
  margin-top: 40rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
  border: none;
}

.create-btn:active {
  transform: scale(0.98);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  color: #999;
}

.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.fab:active {
  transform: scale(0.95) rotate(90deg);
}

.fab-icon {
  color: #fff;
  font-size: 60rpx;
  font-weight: bold;
}

