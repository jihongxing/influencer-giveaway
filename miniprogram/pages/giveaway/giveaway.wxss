/* pages/giveaway/giveaway.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  padding: 20rpx;
}

.influencer-section {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.items-section {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.items-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item-card {
  display: flex;
  padding: 24rpx;
  background-color: #f8f9ff;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.item-card:active {
  background-color: #f0f2ff;
  border-color: #667eea;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.item-category {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shipping-cost {
  font-size: 30rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.item-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}

.item-status.claimed {
  background: linear-gradient(135deg, #999999 0%, #777777 100%);
  box-shadow: 0 2rpx 8rpx rgba(153, 153, 153, 0.2);
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

