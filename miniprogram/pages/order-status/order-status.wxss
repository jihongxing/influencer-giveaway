/* pages/order-status/order-status.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  padding: 20rpx;
}

.status-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.status-card {
  flex: 1;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.status-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.status-value {
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.item-section,
.shipping-section,
.order-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.item-card {
  display: flex;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.item-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.item-label {
  font-size: 28rpx;
  color: #333;
}

.info-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.info-value.amount {
  font-size: 34rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.view-label-btn {
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
  border: none;
}

.view-label-btn:active {
  transform: scale(0.98);
}

