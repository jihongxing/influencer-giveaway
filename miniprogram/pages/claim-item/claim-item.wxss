/* pages/claim-item/claim-item.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  padding: 20rpx;
}

.item-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-label {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.item-category {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.item-stock {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.shipping-cost {
  font-size: 28rpx;
  color: #666;
}

.form-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 地址加载按钮区域 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.load-address-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.load-address-btn::after {
  border: none;
}

.address-loaded-hint {
  font-size: 24rpx;
  color: #07c160;
  padding: 8rpx 20rpx;
  background-color: #e8f5e9;
  border-radius: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  padding: 20rpx;
  background-color: #f7f8fa;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s;
}

.input:focus {
  background-color: #ffffff;
  border-color: #667eea;
}

.picker {
  padding: 20rpx;
  background-color: #f7f8fa;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s;
}

.submit-section {
  padding: 20rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

/* 数量选择器 */
.quantity-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #f7f8fa 0%, #e8e9ef 100%);
  color: #333;
  border-radius: 12rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: none;
  line-height: 60rpx;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.quantity-btn:active {
  transform: scale(0.95);
}

.quantity-btn[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

.quantity-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  min-width: 60rpx;
  text-align: center;
}

.quantity-hint {
  font-size: 24rpx;
  color: #999;
}

/* 费用明细 */
.cost-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.cost-item:last-child {
  margin-bottom: 0;
}

.cost-label {
  font-size: 28rpx;
  color: #666;
}

.cost-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.cost-divider {
  height: 1rpx;
  background-color: #e0e0e0;
  margin: 20rpx 0;
}

.cost-total .cost-label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.cost-total .cost-value.total {
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

