/* pages/batch-upload-items/batch-upload-items.wxss */
@import "/styles/design-system.wxss";

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
}

.header {
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.header .subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 8rpx;
  display: block;
}

.content {
  flex: 1;
  padding: 24rpx;
}

.upload-section {
  margin-bottom: 24rpx;
}

.upload-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  border: 3rpx dashed #667eea;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.upload-box:active {
  transform: scale(0.98);
  border-color: #764ba2;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
}

.upload-box .icon {
  font-size: 80rpx;
  color: #667eea;
  margin-bottom: 16rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

.upload-box .text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.upload-box .hint {
  font-size: 24rpx;
  color: #999;
}

.items-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.item-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.item-card:active {
  transform: translateY(-2rpx);
  border-color: #667eea;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.15);
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.item-info {
  flex: 1;
}

.item-category {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.item-cost {
  font-size: 26rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.item-actions {
  display: flex;
  flex-direction: column;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  padding: 8rpx 16rpx;
}

.item-inputs {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 16rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.input-group.full {
  flex-direction: column;
  align-items: flex-start;
}

.input-group .label {
  width: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.input-group.full .label {
  margin-bottom: 8rpx;
}

.input-group .input {
  flex: 1;
  height: 64rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
}

.input-group.full .input {
  width: 100%;
}

/* picker 选择器样式 */
.picker-value {
  height: 64rpx;
  line-height: 64rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
}

.input-group .unit {
  margin-left: 8rpx;
  font-size: 28rpx;
  color: #666;
}

/* 数量选择器样式 */
.quantity-group {
  display: flex;
  align-items: center;
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.quantity-btn {
  width: 36rpx;
  height: 50rpx;
  background-color: #f0f0f0;
  color: #333;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  border: none;
  line-height: 50rpx;
  flex-shrink: 0;
}

.quantity-btn::after {
  border: none;
}

.quantity-btn[disabled] {
  background-color: #e0e0e0;
  color: #999;
}

.quantity-input {
  width: 80rpx;
  height: 50rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 6rpx;
  padding: 0 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  color: #333;
  flex-shrink: 0;
}

.batch-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.input-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.input-row .label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
}

.input-row .input {
  flex: 1;
  height: 64rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
}

.hint {
  font-size: 24rpx;
  color: #999;
}

.loading-tip {
  text-align: center;
  padding: 32rpx;
  font-size: 28rpx;
  color: #1890ff;
}

.footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
}

.btn-cancel {
  background-color: #fff;
  border: 1rpx solid #d9d9d9;
  color: #666;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.btn-primary:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.btn-primary[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}
