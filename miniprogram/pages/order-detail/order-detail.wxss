/* pages/order-detail/order-detail.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
  padding-bottom: 40rpx;
}

.order-content {
  padding: 30rpx;
}

/* 状态区域 */
.status-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.status-section::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.status-badge {
  display: inline-block;
  padding: 20rpx 48rpx;
  border-radius: 48rpx;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  background: rgba(255, 255, 255, 0.25);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 1;
}

.status-pending {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b35 100%);
}

.status-processing {
  background: linear-gradient(135deg, #1989FA 0%, #1565c0 100%);
}

.status-shipped {
  background: linear-gradient(135deg, #5ac8fa 0%, #1989FA 100%);
}

.status-delivered,
.status-completed {
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
}

.status-cancelled {
  background: linear-gradient(135deg, #ee0a24 0%, #c4001d 100%);
}

.payment-status {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  display: block;
  position: relative;
  z-index: 1;
  font-weight: 500;
}

/* 区块 */
.item-section,
.shipping-section,
.logistics-section,
.cost-section,
.order-info-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 30rpx;
}

/* 物品卡片 */
.item-card {
  display: flex;
  gap: 20rpx;
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.item-category {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.item-shipping {
  font-size: 30rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 信息卡片 */
.info-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #999;
  min-width: 150rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: right;
  word-break: break-all;
}

/* 费用明细 */
.cost-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.cost-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.cost-label {
  font-size: 28rpx;
  color: #666;
}

.cost-value {
  font-size: 28rpx;
  color: #333;
}

.cost-row.total {
  padding-top: 20rpx;
  border-top: 2rpx solid #e0e0e0;
}

.cost-row.total .cost-label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.cost-row.total .cost-value {
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.cost-divider {
  height: 1rpx;
  background-color: #e0e0e0;
  margin: 10rpx 0;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.action-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  border: none;
  transition: all 0.3s;
  font-weight: 600;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.primary {
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.3);
}

.action-btn {
  background-color: #f7f8fa;
  color: #333;
}

.view-label-btn {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.view-label-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

