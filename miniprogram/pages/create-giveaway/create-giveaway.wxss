/* pages/create-giveaway/create-giveaway.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
  padding-bottom: 40rpx;
}

.step-section {
  padding: 30rpx;
}

/* 步骤头部 */
.step-header {
  margin-bottom: 40rpx;
}

.step-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.step-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 上传区域 */
.upload-area {
  width: 100%;
  height: 400rpx;
  border: 3rpx dashed #667eea;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  transition: all 0.3s;
}

.upload-area:active {
  transform: scale(0.98);
  border-color: #764ba2;
}

.upload-icon {
  font-size: 88rpx;
  color: #667eea;
  margin-bottom: 20rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

.upload-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

/* 照片列表 */
.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.photo-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.photo {
  width: 100%;
  height: 100%;
}

/* 步骤操作 */
.step-actions {
  margin-top: 40rpx;
}

.next-btn,
.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.next-btn:active,
.submit-btn:active {
  transform: scale(0.98);
}

.next-btn[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

/* 处理中 */
.processing {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

/* 批量操作栏 */
.batch-toolbar {
  background-color: #fff;
  padding: 24rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.selected-count {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.batch-actions {
  display: flex;
  gap: 20rpx;
}

.batch-btn {
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
  transition: all 0.3s;
}

.batch-btn:active {
  transform: scale(0.95);
}

.batch-btn.danger {
  background: linear-gradient(135deg, #ee0a24 0%, #c4001d 100%);
  box-shadow: 0 2rpx 8rpx rgba(238, 10, 36, 0.2);
}

/* 物品列表 */
.items-list {
  margin-bottom: 40rpx;
}

.item-card {
  display: flex;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid transparent;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.item-card.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.15);
}

/* 选择框 */
.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.checkbox-icon {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

.item-photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.item-category {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 物品字段 */
.item-field {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.field-label {
  font-size: 28rpx;
  color: #666;
  min-width: 100rpx;
}

.field-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  font-weight: 500;
}

.field-edit {
  font-size: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-left: 20rpx;
  font-weight: 600;
}

/* 物品操作 */
.item-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  align-items: flex-end;
  justify-content: center;
}

.edit-btn,
.delete-btn {
  min-width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: none;
  transition: all 0.3s;
}

.edit-btn:active,
.delete-btn:active {
  transform: scale(0.95);
}

.edit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

.delete-btn {
  background: linear-gradient(135deg, #ee0a24 0%, #c4001d 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(238, 10, 36, 0.2);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.batch-toggle-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f7f8fa;
  color: #333;
  border-radius: 48rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s;
}

.batch-toggle-btn:active {
  transform: scale(0.98);
}

.submit-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.submit-btn:active {
  transform: scale(0.98);
}
