/* pages/profile/profile.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
}

/* 未登录提示 */
.login-prompt {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 40rpx;
}

.login-content {
  text-align: center;
}

.login-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 300rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
}

/* 已登录内容 */
.profile-content {
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.user-section::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

/* 信息完善提示区域 */
.info-completion-section {
  background-color: #fff;
  margin-bottom: 10rpx;
  padding: 20rpx 0;
}

/* 单个信息项 */
.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.info-status {
  font-size: 26rpx;
  color: #999;
  margin-right: 20rpx;
}

.info-status.success {
  color: #07c160;
}

.info-item.missing {
  background-color: #fffbf0;
}

.info-item.completed {
  background-color: #f9fff9;
}

.success-icon {
  font-size: 32rpx;
  color: #07c160;
}

/* 操作按钮 */
.action-btn {
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  min-width: 160rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
  transition: all 0.3s;
}

.action-btn.primary:active {
  transform: scale(0.98);
}

.action-btn[disabled] {
  background-color: #ccc;
  color: #fff;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-nickname {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-phone {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.edit-btn {
  padding: 10rpx 24rpx;
  font-size: 28rpx;
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s;
}

.edit-btn:active {
  background: rgba(255, 255, 255, 0.25);
}

/* 统计信息 */
.stats-section {
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 区块 */
.section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.section-more {
  font-size: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
}

/* 活动列表 */
.activities-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  padding: 30rpx;
  background-color: #f8f9ff;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.activity-card:active {
  transform: translateY(-2rpx);
  border-color: #667eea;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.activity-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}

.status-active {
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}

.status-draft {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b35 100%);
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.2);
}

.status-completed {
  background: linear-gradient(135deg, #999999 0%, #777777 100%);
  box-shadow: 0 2rpx 8rpx rgba(153, 153, 153, 0.2);
}

.activity-date {
  font-size: 24rpx;
  color: #999;
}

.activity-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.items-count {
  font-size: 28rpx;
  color: #333;
}

/* 订单列表 */
.orders-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-card {
  padding: 30rpx;
  background-color: #f8f9ff;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.order-card:active {
  transform: translateY(-2rpx);
  border-color: #667eea;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-status {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.order-amount {
  font-size: 34rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.order-item {
  font-size: 28rpx;
  color: #333;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-section {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  display: block;
  margin-bottom: 30rpx;
}

.create-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
  border: none;
}

.create-btn:active {
  transform: scale(0.98);
}

/* 菜单列表 */
.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 30rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 退出登录按钮特殊样式 */
.menu-item.logout {
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.menu-item.logout .menu-text {
  color: #ff4d4f;
}

.menu-item.logout .menu-icon {
  filter: grayscale(0.2);
}

.menu-item.logout:active {
  background-color: #fff5f5;
}

/* 加载中 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

