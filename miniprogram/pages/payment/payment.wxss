/* pages/payment/payment.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  padding: 40rpx;
}

.payment-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.15);
  position: relative;
  overflow: hidden;
}

.payment-section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.05) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 40rpx;
  display: block;
  font-weight: bold;
  position: relative;
  z-index: 1;
}

.amount {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.amount .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.amount .value {
  font-size: 88rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 4rpx 8rpx rgba(255, 107, 53, 0.2);
  letter-spacing: 2rpx;
}

.info-section {
  padding: 20rpx;
  text-align: center;
}

.info-text {
  font-size: 24rpx;
  color: #999;
}

.button-section {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pay-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.4);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.pay-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.pay-btn:active::before {
  width: 600rpx;
  height: 600rpx;
}

.pay-btn:active {
  transform: scale(0.98);
}

.pay-btn[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

.skip-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.35);
  transition: all 0.3s;
}

.skip-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.skip-btn[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

