/* pages/test-auth/test-auth.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 40rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.result-box {
  min-height: 300rpx;
  padding: 30rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid #eee;
}

.result-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.retry-btn {
  width: 100%;
  height: 80rpx;
  background-color: #007aff;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  border: none;
  margin-bottom: 20rpx;
}

.retry-btn[disabled] {
  background-color: #ccc;
}

.test-files-btn {
  width: 100%;
  height: 80rpx;
  background-color: #34c759;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  border: none;
}

.test-files-btn[disabled] {
  background-color: #ccc;
}