/* pages/index/index.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
  padding-bottom: 40rpx;
}

/* 顶部状态栏 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.user-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.login-prompt {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.login-btn {
  padding: 12rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  margin: 20rpx 30rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 48rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.search-bar:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
  flex: 1;
}

/* 分类导航 */
.categories {
  display: flex;
  gap: 16rpx;
  padding: 20rpx 30rpx 30rpx;
  background-color: transparent;
  flex-wrap: wrap;
}

.category-item {
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 24rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border: 2rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  font-weight: 500;
}

.category-item.active {
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: transparent;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 活动列表 */
.activities-section {
  padding: 30rpx;
}

.section-title {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 30rpx;
  letter-spacing: 0.5rpx;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.activity-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.activity-cover {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-color: #f0f0f0;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.5));
  padding: 20rpx;
}

.items-count {
  color: #fff;
  font-size: 24rpx;
}

.activity-info {
  padding: 30rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.user-nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.activity-items {
  margin-bottom: 20rpx;
}

.item-preview {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-preview:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.item-shipping {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
}

.view-detail {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

/* 加载和空状态 */
.loading,
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 40vh;
  color: #999;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}

.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}
