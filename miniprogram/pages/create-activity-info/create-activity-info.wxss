/* pages/create-activity-info/create-activity-info.wxss */
@import "/styles/design-system.wxss";

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
}

.header {
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.content {
  flex: 1;
  padding: 24rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4d4f;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background-color: #f7f8fa;
  transition: all 0.3s;
}

.input:focus {
  background-color: #ffffff;
  border-color: #667eea;
}

.input.small {
  flex: 1;
  height: 64rpx;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background-color: #f7f8fa;
  transition: all 0.3s;
}

.textarea:focus {
  background-color: #ffffff;
  border-color: #667eea;
}

.input-hint {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.cover-upload {
  width: 200rpx;
  height: 200rpx;
  border: 3rpx dashed #667eea;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s;
}

.cover-upload:active {
  border-color: #764ba2;
  transform: scale(0.98);
}

.cover-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #999;
}

.upload-placeholder .icon-add {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.radio-item {
  padding: 16rpx 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.radio-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: transparent;
  color: #fff;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.switch-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  font-size: 28rpx;
}

.datetime-picker {
  margin-top: 16rpx;
}

.picker-row {
  margin-bottom: 16rpx;
}

.picker-value {
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f7f8fa;
  transition: all 0.3s;
}

.datetime-preview {
  padding: 16rpx 0;
  font-size: 26rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-align: center;
  font-weight: 600;
}

.password-inputs {
  margin-top: 16rpx;
}

.input-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.input-row .label {
  width: 80rpx;
  font-size: 28rpx;
  color: #666;
}

.address-box {
  min-height: 80rpx;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  background-color: #f7f8fa;
  transition: all 0.3s;
}

.address-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.address-placeholder {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #999;
}

.footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  text-align: center;
  transition: all 0.3s;
  font-weight: 600;
}

.btn:active {
  transform: scale(0.98);
}

.btn-cancel {
  background-color: #fff;
  border: 1rpx solid #d9d9d9;
  color: #666;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}
