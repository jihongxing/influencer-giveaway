<!--pages/shipping-label/shipping-label.wxml-->
<view class="container">
  <view wx:if="{{loading}}" class="loading">
    <text>加载中...</text>
  </view>

  <view wx:else class="content">
    <view class="label-section">
      <view class="section-title">物流标签</view>
      <image
        class="label-image"
        src="{{shippingLabelUrl}}"
        mode="widthFix"
        bindtap="onPreviewImage"
      />
    </view>

    <view wx:if="{{trackingNumber}}" class="tracking-section">
      <view class="section-title">运单号</view>
      <view class="tracking-card">
        <text class="tracking-number">{{trackingNumber}}</text>
        <button class="copy-btn" bindtap="onCopyTrackingNumber">复制</button>
      </view>
    </view>

    <view class="tips-section">
      <text class="tips-text">提示：点击标签图片可放大查看</text>
    </view>
  </view>
</view>

