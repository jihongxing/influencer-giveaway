/* pages/shipping-label/shipping-label.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  padding: 20rpx;
}

.label-section {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.label-image {
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tracking-section {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.tracking-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
}

.tracking-number {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  flex: 1;
}

.copy-btn {
  padding: 12rpx 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 24rpx;
  font-size: 24rpx;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
  transition: all 0.3s;
  border: none;
}

.copy-btn:active {
  transform: scale(0.95);
}

.tips-section {
  padding: 20rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

