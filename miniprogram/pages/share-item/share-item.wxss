/* pages/share-item/share-item.wxss */
@import "/styles/design-system.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
  padding: 30rpx;
}

.form {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section {
  margin-bottom: 30rpx;
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.hint {
  font-size: 24rpx;
  color: #999;
}

.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.photo-item {
  position: relative;
  width: 100%;
  padding-top: 100%;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.photo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #ee0a24 0%, #c4001d 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(238, 10, 36, 0.3);
}

.add-photo-btn {
  padding-top: 100%;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  border: 3rpx dashed #667eea;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s;
}

.add-photo-btn:active {
  transform: scale(0.95);
  border-color: #764ba2;
}

.add-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  color: #667eea;
  margin-bottom: 10rpx;
}

.add-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, 20%);
  font-size: 24rpx;
  color: #999;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f7f8fa;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  transition: all 0.3s;
}

.textarea:focus {
  background-color: #ffffff;
  border-color: #667eea;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
}

