/* components/qr-scanner/qr-scanner.wxss */
.qr-scanner {
  width: 100%;
}

.scan-btn {
  width: 100%;
  height: 88rpx;
  background-color: #3cc51f;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-btn[disabled] {
  background-color: #ccc;
}

