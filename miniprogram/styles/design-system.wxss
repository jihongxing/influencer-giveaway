/**
 * 设计规范 - Design System
 * 统一的视觉规范和样式变量
 */

/* ==================== 颜色系统 ==================== */

/* 主色调 - Primary Colors */
:root {
  /* 品牌色 - 微信绿 */
  --color-primary: #07c160;
  --color-primary-light: #e8f5e9;
  --color-primary-dark: #05a050;
  
  /* 辅助色 - 蓝色 */
  --color-secondary: #1989FA;
  --color-secondary-light: #e3f2fd;
  --color-secondary-dark: #1565c0;
  
  /* 强调色 - 橙色 */
  --color-accent: #ff6b35;
  --color-accent-light: #fff3e0;
  
  /* 功能色 */
  --color-success: #07c160;
  --color-warning: #fa9d3b;
  --color-error: #ee0a24;
  --color-info: #1989FA;
  
  /* 中性色 */
  --color-text-primary: #333333;
  --color-text-secondary: #666666;
  --color-text-tertiary: #999999;
  --color-text-disabled: #cccccc;
  
  /* 背景色 */
  --color-bg-page: #f5f5f5;
  --color-bg-card: #ffffff;
  --color-bg-gray: #f7f8fa;
  --color-bg-overlay: rgba(0, 0, 0, 0.5);
  
  /* 边框色 */
  --color-border-light: #f0f0f0;
  --color-border-base: #e0e0e0;
  --color-border-dark: #d9d9d9;
}

/* ==================== 字体规范 ==================== */

/* 字号 */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 40rpx; }
.text-3xl { font-size: 48rpx; }

/* 字重 */
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }

/* 行高 */
.leading-tight { line-height: 1.2; }
.leading-normal { line-height: 1.5; }
.leading-relaxed { line-height: 1.8; }

/* ==================== 间距规范 ==================== */

/* Padding */
.p-xs { padding: 8rpx; }
.p-sm { padding: 16rpx; }
.p-md { padding: 24rpx; }
.p-lg { padding: 32rpx; }
.p-xl { padding: 40rpx; }

.px-xs { padding-left: 8rpx; padding-right: 8rpx; }
.px-sm { padding-left: 16rpx; padding-right: 16rpx; }
.px-md { padding-left: 24rpx; padding-right: 24rpx; }
.px-lg { padding-left: 32rpx; padding-right: 32rpx; }

.py-xs { padding-top: 8rpx; padding-bottom: 8rpx; }
.py-sm { padding-top: 16rpx; padding-bottom: 16rpx; }
.py-md { padding-top: 24rpx; padding-bottom: 24rpx; }
.py-lg { padding-top: 32rpx; padding-bottom: 32rpx; }

/* Margin */
.m-xs { margin: 8rpx; }
.m-sm { margin: 16rpx; }
.m-md { margin: 24rpx; }
.m-lg { margin: 32rpx; }
.m-xl { margin: 40rpx; }

.mx-auto { margin-left: auto; margin-right: auto; }
.my-sm { margin-top: 16rpx; margin-bottom: 16rpx; }
.my-md { margin-top: 24rpx; margin-bottom: 24rpx; }
.my-lg { margin-top: 32rpx; margin-bottom: 32rpx; }

/* Gap */
.gap-xs { gap: 8rpx; }
.gap-sm { gap: 16rpx; }
.gap-md { gap: 24rpx; }
.gap-lg { gap: 32rpx; }

/* ==================== 圆角规范 ==================== */

.rounded-none { border-radius: 0; }
.rounded-sm { border-radius: 8rpx; }
.rounded { border-radius: 12rpx; }
.rounded-md { border-radius: 16rpx; }
.rounded-lg { border-radius: 20rpx; }
.rounded-xl { border-radius: 24rpx; }
.rounded-full { border-radius: 9999rpx; }

/* ==================== 阴影规范 ==================== */

.shadow-none { box-shadow: none; }
.shadow-sm { box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05); }
.shadow { box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); }
.shadow-md { box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1); }
.shadow-lg { box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12); }
.shadow-xl { box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15); }

/* ==================== 按钮组件 ==================== */

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
  border: none;
}

.btn::after {
  border: none;
}

/* 按钮尺寸 */
.btn-sm {
  height: 64rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.btn-lg {
  height: 96rpx;
  font-size: 36rpx;
  border-radius: 16rpx;
}

/* 按钮类型 */
.btn-primary {
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.btn-primary:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.btn-secondary {
  background: linear-gradient(135deg, #1989FA 0%, #1565c0 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
}

.btn-accent {
  background: linear-gradient(135deg, #ff6b35 0%, #f5576c 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.btn-outline {
  background-color: #ffffff;
  border: 2rpx solid #07c160;
  color: #07c160;
}

.btn-ghost {
  background-color: #f5f5f5;
  color: #333333;
}

.btn-disabled,
.btn[disabled] {
  background: #e0e0e0 !important;
  color: #999999 !important;
  box-shadow: none !important;
  opacity: 0.6;
}

/* ==================== 卡片组件 ==================== */

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.card-bordered {
  border: 2rpx solid #f0f0f0;
}

.card-header {
  padding-bottom: 24rpx;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* ==================== 徽章组件 ==================== */

.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.badge-success {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.badge-warning {
  background-color: rgba(250, 157, 59, 0.1);
  color: #fa9d3b;
}

.badge-error {
  background-color: rgba(238, 10, 36, 0.1);
  color: #ee0a24;
}

.badge-info {
  background-color: rgba(25, 137, 250, 0.1);
  color: #1989FA;
}

/* ==================== 输入框组件 ==================== */

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #f7f8fa;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  transition: all 0.3s;
}

.input:focus {
  background-color: #ffffff;
  border-color: #07c160;
}

.input::placeholder {
  color: #cccccc;
}

.input-error {
  border-color: #ee0a24 !important;
}

/* ==================== 分割线 ==================== */

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 24rpx 0;
}

.divider-thick {
  height: 2rpx;
  background-color: #e0e0e0;
}

/* ==================== 通用工具类 ==================== */

/* Flex 布局 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-row { flex-direction: row; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-around { justify-content: space-around; }
.flex-1 { flex: 1; }
.flex-wrap { flex-wrap: wrap; }

/* 文本对齐 */
.text-left { text-align: left; }
.text-center { text-align: center; }
.text-right { text-align: right; }

/* 文本颜色 */
.text-primary { color: #333333; }
.text-secondary { color: #666666; }
.text-tertiary { color: #999999; }
.text-brand { color: #07c160; }
.text-accent { color: #ff6b35; }
.text-white { color: #ffffff; }

/* 背景色 */
.bg-white { background-color: #ffffff; }
.bg-gray { background-color: #f5f5f5; }
.bg-primary { background-color: #07c160; }
.bg-accent { background-color: #ff6b35; }

/* 宽度 */
.w-full { width: 100%; }
.w-auto { width: auto; }

/* 高度 */
.h-full { height: 100%; }
.h-screen { height: 100vh; }

/* 溢出处理 */
.overflow-hidden { overflow: hidden; }
.overflow-auto { overflow: auto; }

/* 文本溢出 */
.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line-clamp-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 动画效果 */
.transition { transition: all 0.3s; }
.transition-fast { transition: all 0.15s; }
.transition-slow { transition: all 0.5s; }

/* 交互效果 */
.clickable:active {
  opacity: 0.7;
  transform: scale(0.98);
}

.hover-lift:active {
  transform: translateY(-4rpx);
}
